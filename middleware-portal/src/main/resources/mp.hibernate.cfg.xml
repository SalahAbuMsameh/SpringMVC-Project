<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		
		<!-- Database info -->
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="hibernate.connection.datasource">java:comp/env/jdbc/IntegrationServicesDS</property>
		
		<property name="hibernate.current_session_context_class">thread</property>
		
		<!-- Show and print nice SQL on stdout -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hibernate.id.new_generator_mappings">false</property>
		
		<mapping class="com.warba.middlware.dao.entity.User"/>
		<mapping class="com.warba.middlware.dao.entity.Role"/>
		<mapping class="com.warba.middlware.dao.entity.UserPassword"/>
		<mapping class="com.warba.common.dao.config.ConfigEntity"/>
		
	</session-factory>
</hibernate-configuration>